# ========================================
# GLEAM BOT CONFIGURATION
# ========================================

# Gleam Campaign URL
GLEAM_URL="https://gleam.io/xxxxx/your-campaign"

# ========================================
# TWITTER CREDENTIALS
# ========================================
TWITTER_USERNAME="your_twitter_username"
TWITTER_PASSWORD="your_twitter_password"
TWITTER_EMAIL="your_twitter_email"

# ========================================
# DISCORD CREDENTIALS
# ========================================
DISCORD_EMAIL="your_discord_email"
DISCORD_PASSWORD="your_discord_password"

# ========================================
# CAPTCHA SOLVER (2Captcha)
# ========================================
# Get API key from: https://2captcha.com
CAPTCHA_API_KEY=""

# ========================================
# PROXY SETTINGS (OPTIONAL)
# ========================================
# Format: http://username:password@host:port
PROXY_SERVER=""
USE_PROXY="false"

# ========================================
# BOT SETTINGS
# ========================================
# Browser headless mode (true = tidak terlihat, false = terlihat)
HEADLESS="false"

# Delay between actions (milliseconds)
ACTION_DELAY="2000"

# Max retries on error
MAX_RETRIES="3"

# Timeout for page load (milliseconds)
PAGE_TIMEOUT="30000"

# Delay between accounts (milliseconds)
ACCOUNT_DELAY="5000"  # 5 detik antar akun

# ----------------------------------------
# Account range (start & limit)
# ----------------------------------------
# Start index (1 = akun pertama). Bot akan mengubah ini menjadi index 0 internally.
ACCOUNT_START="1"

# Run up to N accounts starting from ACCOUNT_START.
# Jika lebih besar dari jumlah akun, bot akan menjalankan semua akun yang ada.
ACCOUNT_LIMIT="30"

# ========================================
# ADVANCED SETTINGS
# ========================================
# Anti-detection mode
STEALTH_MODE="true"

# Save screenshots on error
SAVE_SCREENSHOTS="true"

# Debug mode (verbose logging)
DEBUG="true"
