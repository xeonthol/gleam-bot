# ========================================
# GLEAM BOT CONFIGURATION
# ========================================

# URL Campaign Gleam
GLEAM_URL="https://gleam.io/xxxxx/your-campaign"

# ========================================
# TWITTER CREDENTIALS
# ========================================
TWITTER_USERNAME=""
TWITTER_PASSWORD=""
TWITTER_EMAIL=""

# ========================================
# CAPTCHA SOLVER (2Captcha)
# ========================================
# Dapatkan API key dari: https://2captcha.com
CAPTCHA_API_KEY=""

# ========================================
# PROXY SETTINGS (OPTIONAL)
# ========================================
# Format: http://username:password@host:port
USE_PROXY="false"
PROXY_SERVER=""

# ========================================
# ACCOUNT CONTROL
# ========================================
# Jalankan akun mulai dari nomor berapa
ACCOUNT_START="1"

# Jumlah maksimal akun yang dijalankan
ACCOUNT_LIMIT="30"

# Jeda antar akun (dalam milidetik)
ACCOUNT_DELAY="5000"  # 5 detik

# ========================================
# BROWSER & BOT SETTINGS
# ========================================
# Mode headless (true = tidak terlihat, false = terlihat)
HEADLESS="false"

# Aktifkan mode stealth (anti deteksi)
STEALTH_MODE="true"

# Waktu tunggu maksimal pemuatan halaman (ms)
PAGE_TIMEOUT="30000"

# Jumlah maksimal percobaan ulang saat error
MAX_RETRIES="3"

# Delay antar aksi (ms)
ACTION_DELAY="2000"

# Simpan screenshot jika terjadi error
SAVE_SCREENSHOTS="true"

# ========================================
# DEBUG & LOGGING
# ========================================
# Aktifkan debug (tampilkan log detail)
DEBUG="true"
